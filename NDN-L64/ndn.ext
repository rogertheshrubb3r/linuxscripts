     gcc -Wall -o ! !.! && ./!
     read -s -p "Hit ENTER to continue..."
}

pas[    >1 ~B~orland Pascal
	bpc ~!.!~
	>1 ~V~irtual Pascal
	##!!/bin/bash

	function chkerrorlevel() {
		if [ $$? !!= 0 ] ; then
		   echo "--- error detected!! aborting... ---"
		   exit 1
		fi
	}

	VPPATH="/media/hda10/vp/bin.lnx"
	$$VPPATH/vpc -b -CL:lnx:LINUX -V$$VPPATH/vp.vpo -E. !.!
	chkerrorlevel
	$$VPPATH/pe2elf !
	chkerrorlevel
   ]

